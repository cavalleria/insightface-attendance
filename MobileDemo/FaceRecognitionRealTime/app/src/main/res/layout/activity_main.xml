<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Face Detection\n and Recognition"
        android:textColor="@color/darkergreen"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="195dp"
        android:layout_height="137dp"
        android:src="@mipmap/taskcon"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:layout_below="@+id/title"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="181dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo"
        android:background="@drawable/background">

        <Button
            android:id="@+id/btnAddFace"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            android:background="@drawable/button"
            android:text="Add face"
            android:textAllCaps="false"
            android:textColor="@color/darkergreen"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btnDetect"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            android:background="@drawable/button"
            android:text="Detect face"
            android:textAllCaps="false"
            android:textColor="@color/darkergreen"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btnDetectRealTime"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            android:background="@drawable/button"
            android:text="Detect realtime"
            android:textAllCaps="false"
            android:textColor="@color/darkergreen"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btnClearFace"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            android:background="@drawable/button"
            android:text="Clear face data"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="28dp" />
    </LinearLayout>
</RelativeLayout>